<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/myshape"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewMenuHello"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.32"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/textAppLogo"
        android:src="@drawable/icon" />

    <Button
        android:id="@+id/buttonMenuWeb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_weight="0.41"
        android:background="@drawable/myshapeyellow"
        android:text="@string/textMenuWeb" />

    <Button
        android:id="@+id/buttonMenuNote"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="0.36"
        android:background="@drawable/myshapeyellow"
        android:text="@string/textMenuWidget" />

</LinearLayout>